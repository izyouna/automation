# Phase 2 Production Environment Variables

# Application Settings
APP_NAME=Phase 2 Production API
APP_VERSION=2.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DATABASE_URL=postgresql://postgres:password@localhost:5432/phase2_production
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_TTL=3600

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:3000", "https://staging.example.com", "https://production.example.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# API Settings
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# Session Settings
SESSION_COOKIE_NAME=phase2_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Performance Settings
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30
